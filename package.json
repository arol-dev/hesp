{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "docker-compose up -d && turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test:unit": "cd apps/hesp && concurrently --kill-others-on-fail --success first --handle-input \"yarn build\" \"PORT=4000 yarn dev\" \" prisma migrate dev && jest\""
  },
  "devDependencies": {
    "@types/concurrently": "^7.0.0",
    "concurrently": "^8.1.0",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
